  };

  const playerSelection = document.getElementById('player-selection');
  const gameContainer = document.getElementById('game-container');
  const questionNumberElem = document.getElementById('question-number');
  const questionTextElem = document.getElementById('question-text');
  const answerButtons = Array.from(gameContainer.querySelectorAll('.answer-btn'));
  const feedbackElem = document.getElementById('feedback');
  const nextBtn = document.getElementById('next-btn');
  const finalMessage = document.getElementById('final-message');
  const restartBtn = finalMessage.querySelector('#restart-btn');
  const lifelineBtn = document.getElementById('lifeline-btn');
  const backToSelectionBtn = document.getElementById('back-to-selection-btn');

  let currentPlayer = null;
  let currentQuestionIndex = 0;
  let currentQuestions = [];
  let lifelineUsed = false;

  function resetState() {
    feedbackElem.textContent = '';
    nextBtn.style.display = 'none';
    lifelineBtn.disabled = lifelineUsed;
    answerButtons.forEach(btn => {
      btn.disabled = false;
      btn.classList.remove('correct', 'incorrect', 'disabled');
      btn.style.display = 'flex';
    });
  }

  function startGame(playerNum) {
    currentPlayer = playerNum;
    currentQuestions = questions[playerNum];
    currentQuestionIndex = 0;
    lifelineUsed = false;
    playerSelection.style.display = 'none';
    finalMessage.style.display = 'none';
    gameContainer.style.display = 'block';
    lifelineBtn.disabled = false;
    showQuestion();
  }

  function showQuestion() {
    resetState();
    const q = currentQuestions[currentQuestionIndex];
    questionNumberElem.textContent = `Pregunta ${currentQuestionIndex + 1} de ${currentQuestions.length}`;
    questionTextElem.textContent = q.q;
    answerButtons.forEach(btn => {
      const option = btn.getAttribute('data-option');
      btn.querySelector('.answer-text').textContent = q.opts[option];
    });
  }

  function selectAnswer(e) {
    const selectedBtn = e.currentTarget;
    if (selectedBtn.disabled) return;
    const selectedOption = selectedBtn.getAttribute('data-option');
    const correctOption = currentQuestions[currentQuestionIndex].correct;

    answerButtons.forEach(btn => {
      btn.disabled = true;
      btn.classList.add('disabled');
      if (btn.getAttribute('data-option') === correctOption) {
        btn.classList.add('correct');
      }
    });

    if (selectedOption === correctOption) {
      feedbackElem.textContent = "¡Correcto!";
      feedbackElem.style.color = "#2ed573";
    } else {
      feedbackElem.textContent = `Incorrecto. La respuesta correcta es ${correctOption}: "${currentQuestions[currentQuestionIndex].opts[correctOption]}"`;
      feedbackElem.style.color = "#ff4757";
      selectedBtn.classList.add('incorrect');
    }

    nextBtn.style.display = 'inline-block';
    lifelineBtn.disabled = true;
  }

  function nextQuestion() {
    currentQuestionIndex++;
    if (currentQuestionIndex < currentQuestions.length) {
      lifelineBtn.disabled = lifelineUsed;
      showQuestion();
    } else {
      gameOver();
    }
  }

  function gameOver() {
    gameContainer.style.display = 'none';
    finalMessage.style.display = 'block';
  }

  function useLifeline() {
    if (lifelineUsed) return;
    lifelineUsed = true;
    lifelineBtn.disabled = true;

    const q = currentQuestions[currentQuestionIndex];
    const correctOption = q.correct;

    const incorrectOptions = answerButtons.filter(btn => btn.getAttribute('data-option') !== correctOption && btn.style.display !== 'none');

    let toRemove = [];
    if (incorrectOptions.length <= 2) {
      toRemove = incorrectOptions;
    } else {
      while (toRemove.length < 2) {
        const idx = Math.floor(Math.random() * incorrectOptions.length);
        const chosen = incorrectOptions[idx];
        if (!toRemove.includes(chosen)) {
          toRemove.push(chosen);
        }
      }
    }

    toRemove.forEach(btn => {
      btn.style.display = 'none';
      btn.disabled = true;
    });
  }

  function backToSelection() {
    gameContainer.style.display = 'none';
    finalMessage.style.display = 'none';
    playerSelection.style.display = 'block';
    // reset states
    currentPlayer = null;
    currentQuestionIndex = 0;
    currentQuestions = [];
    lifelineUsed = false;
  }

  playerSelection.querySelectorAll('.player-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const playerNum = parseInt(btn.getAttribute('data-player'), 10);
      startGame(playerNum);
    });
  });

  answerButtons.forEach(btn => btn.addEventListener('click', selectAnswer));
  nextBtn.addEventListener('click', nextQuestion);
  restartBtn.addEventListener('click', () => {
    finalMessage.style.display = 'none';
    playerSelection.style.display = 'block';
  });
  lifelineBtn.addEventListener('click', useLifeline);
  backToSelectionBtn.addEventListener('click', backToSelection);
})();
</script>
</body>
</html>

